{
  "compilerOptions": {
    // Output related
    "target": "ESNext",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    // Module resolution
    "moduleResolution": "node",
    // Type checking
    "lib": [
      "ESNext"
    ],
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES6",
    "types": [
      "nodecg-types/types/browser"
    ],
    "jsx": "react-jsx"
  },
  "files": [
    "global.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/dashboard/config.tsx"
  ],
  "compileOnSave": true
}
