{
  "name": "obs",
  "version": "0.0.0",
  "description": "Connector holding Replicants for OBS Data like currentScene and more",
  "homepage": "",
  "author": {
    "name": "Jimmy Vrana",
    "email": "devJimmyboy@gmail.com",
    "url": "https://jimmyboy.dev"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "keywords": [
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "bundleDependencies": {
      "nodecg-io-obs": "*"
    },
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "file": "config.html",
        "name": "obs-graphics-config",
        "title": "OBS Graphics Config",
        "width": 3,
        "workspace": "config"
      }
    ],
    "assetCategories": [
      {
        "name": "logo",
        "title": "Logo Webm",
        "allowedTypes": [
          "webm"
        ]
      }
    ]
  },
  "scripts": {
    "dev": "run-p dev:*",
    "build": "run-p build:*",
    "dev:extension": "tsc -b -w extension",
    "dev:graphics": "parcel watch src/graphics/*.html --dist-dir graphics --public-url ./",
    "dev:dash": "parcel watch src/dashboard/*.html --dist-dir dashboard --public-url ./",
    "build:extension": "tsc -b extension",
    "build:graphics": "parcel build src/graphics/*.html --dist-dir graphics --public-url ./",
    "build:dash": "parcel build src/dashboard/*.html --dist-dir dashboard --public-url ./",
    "clean": "tsc -b --clean"
  },
  "dependencies": {
    "@types/node": "^17.0.9",
    "gsap": "^3.9.1",
    "nodecg-io-obs": "^0.2.0",
    "nodecg-types": "^1.8.3",
    "postcss": "8.4.7",
    "typescript": "^4.5.4"
  },
  "repository": "https://github.com/devJimmyboy/stream-overlay.git",
  "license": "Apache-2.0",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "nodecg": "^1.8.1",
    "obs-websocket-js": "^4.0.3",
    "parcel": "^2.2.1",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.1.2",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^3.0.15"
  }
}
