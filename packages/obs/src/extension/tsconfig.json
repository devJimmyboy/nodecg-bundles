{
  "compilerOptions": {
    // Output related
    "target": "es2017",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,

    // Module resolution
    "moduleResolution": "node",
    // Type checking
    "lib": ["es2017"],
    "alwaysStrict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,

    "module": "CommonJS"
  },
  "files": ["../global.d.ts"],
  "include": ["./*.ts"],
  "compileOnSave": true
}
