{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "lib": ["es2017"],
    "outDir": "../../extension",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "types": ["node"]
  },
  "include": ["./**/*.ts", "tailwind.config.js"],
  "files": ["../../global.d.ts"],
  "exclude": ["**/nodecg-io-googleapis"]
}
