{
  "name": "peepo-interactive",
  "version": "0.1.0",
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "targets": {
    "default": {
      "scopeHoist": false
    }
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p dev:*",
    "dev:dash": "parcel watch src/dashboard/*.html --dist-dir dashboard --public-url ./ --log-level verbose ",
    "dev:graphics": "parcel watch src/graphics/*.html --dist-dir graphics --public-url ./ --log-level verbose -p 1235",
    "build": "run-p build:*",
    "build:dash": "parcel build src/dashboard/*.html --dist-dir dashboard --public-url ./ --log-level verbose ",
    "build:graphics": "parcel build src/graphics/*.html --dist-dir graphics --public-url ./ --log-level verbose",
    "check": "tsc --noEmit"
  },
  "browserslist": "chrome >= 74",
  "nodecg": {
    "compatibleRange": "^1.6.1",
    "bundleDependencies": {},
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "panel",
        "title": "Interactive Peepo",
        "width": 3,
        "file": "index.html",
        "headerColor": "#525F78"
      }
    ],
    "assetCategories": [
      {
        "name": "animations",
        "title": "Animations For Peepo",
        "allowedTypes": [
          "png",
          "json"
        ]
      }
    ]
  },
  "dependencies": {
    "@types/node": "^16.11.9",
    "gsap": "^3.8.0",
    "pixi.js": "^6.2.0"
  },
  "devDependencies": {
    "@types/p5": "^1.3.1",
    "@types/pixi.js": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "daisyui": "^1.16.2",
    "nodecg": "^1.8.1",
    "nodecg-io-streamelements": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.0.2",
    "postcss-preset-env": "^7.0.1",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^2.2.19"
  }
}
