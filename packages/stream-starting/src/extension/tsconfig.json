{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es2017"],
    "outDir": "../../extension",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "types": ["node"]
  },
  "include": ["**/*.ts"]
}
