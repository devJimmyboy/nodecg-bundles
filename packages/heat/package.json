{
  "name": "heat",
  "version": "0.1.0",
  "private": true,
  "source": "extension/index.ts",
  "main": "extension/index.js",
  "sideEffects": false,
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "dev": "tsc -b -w extension/tsconfig.json",
    "watch": "parcel watch",
    "build": "tsc -b extension/tsconfig.json"
  },
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "bundleDependencies": {
      "nodecg-io-twitch-api": "*"
    },
    "dashboardPanels": [
      {
        "name": "heat-panel",
        "title": "Heat Config",
        "width": 2,
        "headerColor": "#2d4e8a",
        "workspace": "config",
        "file": "panel.html"
      }
    ]
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "node-fetch": "3.1.0",
    "nodecg-io-core": "^0.2.0",
    "nodecg-io-twitch-api": "^0.2.0",
    "socket.io-client": "^4.4.0",
    "ws": "8.4.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.9",
    "@types/ws": "8.2.2",
    "nodecg": "^1.8.1",
    "nodecg-types": "^1.8.3",
    "parcel": "^2.0.1"
  }
}
