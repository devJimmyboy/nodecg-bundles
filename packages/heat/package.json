{
  "name": "heat",
  "version": "0.1.0",
  "private": true,
  "source": "extension/index.ts",
  "main": "extension/index.js",
  "sideEffects": false,
  "engines": {
    "node": ">= 12"
  },
  "scripts": {
    "dev": "tsc -b -w extension/tsconfig.json",
    "watch": "parcel watch",
    "build": "tsc -b extension/tsconfig.json"
  },
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "bundleDependencies": {
      "nodecg-io-twitch-api": "*"
    },
    "dashboardPanels": [
      {
        "name": "heat-panel",
