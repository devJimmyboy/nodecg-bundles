{
  "compilerOptions": {
    // Output related
    "target": "ES5",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    // Module resolution
    "moduleResolution": "node",
    // Type checking
    "lib": [
      "ES5"
    ],
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS"
  },
  "files": [
    "../../global.d.ts"
  ],
  "include": [
    "./*.ts"
  ],
  "compileOnSave": true
}
