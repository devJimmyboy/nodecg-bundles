{
  "name": "nodecg-twitch-chat",
  "version": "0.1.0",
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p dev:*",
    "dev:dashboard": "parcel watch src/dashboard/*.html --dist-dir dashboard --public-url ./",
    "dev:graphics": "parcel watch src/graphics/*.html --dist-dir graphics --public-url ./ --port 1235",
    "dev:extension": "tsc -w  --project tsconfig.ext.json",
    "build:extension": "parcel build ./extension/*.ts --dist-dir extension",
    "build": "run-p build:*",
    "build:dash": "parcel build src/graphics/*.html --dist-dir dashboard --public-url ./",
    "build:graphics": "parcel build src/graphics/*.html --dist-dir graphics --public-url ./"
  },
  "browserslist": "chrome >= 74",
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "bundleDependencies": {
      "nodecg-io-twitch-addons": "*",
      "nodecg-io-twitch-api": "*",
      "nodecg-io-twitch-chat": "*"
    },
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "twitch-chat",
        "title": "Twitch Chat",
        "width": 3,
        "file": "index.html",
        "headerColor": "#525F78"
      }
    ]
  },
  "dependencies": {
    "daisyui": "^1.14.1",
    "jquery": "^3.6.0",
    "nodecg": "^1.8.1",
    "nodecg-io-core": "*",
    "nodecg-io-twitch-chat": "*",
    "postcss": "^8.3.8",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^2.2.15",
    "tmi.js": "^1.8.5",
    "twemoji": "^13.1.0",
    "twitch-fetcher": "^1.1.1"
  },
  "devDependencies": {
    "nodecg-types": "^1.8.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "postcss-url": "^10.1.3",
    "sharp": "^0.29.1"
  }
}
