{
  "name": "misc-components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:dash": "parcel watch 'components/*/*-panel.html' --dist-dir ./dashboard",
    "dev:graphics": "parcel watch 'components/*/*-graphic.html' --dist-dir ./graphics --port 1235",
    "dev:extension": "tsc -w extension/*.ts",
    "build": "run-s build:*",
    "build:dash": "parcel build 'components/*/*-panel.html' --dist-dir ./dashboard",
    "build:graphics": "parcel build 'components/*/*-graphics.html' --dist-dir ./graphics",
    "build:extension": "tsc -w extension/*.ts"
  },
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "dashboardPanels": [
      {
        "name": "misc-components",
        "title": "Component Config",
        "width": 3,
        "file": "config-panel.html",
        "workspace": "Config"
      }
    ],
    "graphics": [
      {
        "file": "index-graphics.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.0.0",
    "nodecg-types": "^1.8.3",
    "parcel": "^2.0.0",
    "typescript": "^4.4.4"
  }
}
