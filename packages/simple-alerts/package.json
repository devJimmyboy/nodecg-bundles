{
  "name": "simple-alerts",
  "version": "0.1.0",
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "api.js",
    "extension"
  ],
  "browserslist": [
    "chrome >= 74"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:dashboard": "parcel watch src/dashboard/*.html --dist-dir ./dashboard --public-url . --port 12346",
    "dev:graphics": "parcel watch src/graphics/*.html --dist-dir ./graphics --public-url . --port 12345",
    "dev:extension": "tsc -w --project extension/tsconfig.json",
    "build": "run-p build:*",
    "build:dashboard": "parcel build src/dashboard/*.html --dist-dir dashboard --public-url ./",
    "build:graphics": "parcel build src/graphics/*.html --dist-dir graphics --public-url ./",
    "build:extension": "tsc -b extension"
  },
  "dependencies": {
    "@eastdesire/jscolor": "^2.4.6",
    "@iconify/iconify": "^2.1.0",
    "animate.css": "^4.1.1",
    "axios": "^0.24.0",
    "bad-words": "^3.0.4",
    "chosen-js": "^1.8.7",
    "daisyui": "^1.16.2",
    "jquery": "^3.6.0",
    "nodecg-io-core": "^0.2.0",
    "twitch-fetcher": "^1.1.1"
  },
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "bundleDependencies": {
      "nodecg-io-streamelements": "*"
    },
    "dashboardPanels": [
      {
        "name": "panel",
        "title": "Simple Alerts",
        "width": 5,
        "file": "panel.html",
        "headerColor": "#525F78"
      },
      {
        "name": "bad-words",
        "title": "Alerts Bad Word Config",
        "width": 2,
        "file": "config.html",
        "workspace": "config",
        "headerColor": "#525F78"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "assetCategories": [
      {
        "name": "media-graphics",
        "title": "Graphics",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "webm"
        ]
      },
      {
        "name": "media-sounds",
        "title": "Sounds",
        "allowedTypes": [
          "mp3",
          "wav",
          "ogg"
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/node": "^16.11.9",
    "autoprefixer": "^10.4.0",
    "nodecg-io-streamelements": "^0.2.0",
    "nodecg-types": "^1.8.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.0.2",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.2"
  }
}
