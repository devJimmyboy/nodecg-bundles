{
  "browserslist": [
    "chrome >= 74"
  ],
  "dependencies": {
    "@eastdesire/jscolor": "^2.4.6",
    "@iconify/iconify": "^2.1.1",
    "animate.css": "^4.1.1",
    "axios": "^0.24.0",
    "bad-words": "^3.0.4",
    "daisyui": "^1.24.3",
    "gsap": "^3.9.1",
    "jquery": "^3.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-select": "^5.2.2",
    "use-nodecg": "^0.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "nodecg-io-streamelements": "^0.2.0",
    "nodecg-types": "^1.8.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.2.1",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.1.2",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.5.4"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "api.js",
    "extension"
  ],
  "name": "simple-alerts",
  "nodecg": {
    "assetCategories": [
      {
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "webm"
        ],
        "name": "media-graphics",
        "title": "Graphics"
      },
      {
        "allowedTypes": [
          "mp3",
          "wav",
          "ogg"
        ],
        "name": "media-sounds",
        "title": "Sounds"
      }
    ],
    "compatibleRange": "^1.1.1",
    "dashboardPanels": [
      {
        "file": "panel.html",
        "headerColor": "#525F78",
        "name": "panel",
        "title": "Simple Alerts",
        "width": 5
      },
      {
        "file": "config.html",
        "headerColor": "#525F78",
        "name": "bad-words",
        "title": "Alerts Bad Word Config",
        "width": 2,
        "workspace": "config"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "height": 1080,
        "width": 1920
      }
    ]
  },
  "scripts": {
    "build": "run-p build:*",
    "build:dashboard": "parcel build src/dashboard/*.html --dist-dir dashboard --public-url ./",
    "build:extension": "tsc -b extension",
    "build:graphics": "parcel build src/graphics/*.html --dist-dir graphics --public-url ./",
    "dev": "run-p dev:*",
    "dev:dashboard": "parcel watch src/dashboard/*.html --dist-dir ./dashboard --public-url . --port 1234",
    "dev:extension": "tsc -w --project extension/tsconfig.json",
    "dev:graphics": "parcel watch src/graphics/*.html --dist-dir ./graphics --public-url . --port 12345"
  },
  "version": "0.1.0"
}
