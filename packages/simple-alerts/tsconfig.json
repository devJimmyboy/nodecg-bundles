{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "strict": false,
    "alwaysStrict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "moduleResolution": "node",
    "types": ["nodecg-types/types/browser"],
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "paths": {
      "~*": ["./*"]
    }
  },
  "files": ["./global.d.ts"],
  "typeAcquisition": { "enable": true, "include": ["@eastdesire/jscolor"] }
}
