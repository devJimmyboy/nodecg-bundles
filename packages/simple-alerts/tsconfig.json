{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "module": "ESNext",
    "strict": false,
    "alwaysStrict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "types": [
      "nodecg-types/types/browser"
    ],
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "paths": {
      "~*": [
        "./*"
      ]
    }
  },
  "files": [
    "./global.d.ts"
  ]
}
