{
  "name": "nodecg-currentsong",
  "version": "0.5.0",
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p dev:*",
    "dev:dash": "parcel watch src/dashboard/index.html --dist-dir dashboard --public-url ./",
    "dev:graphics": "parcel watch src/graphics/index.html --dist-dir graphics --public-url ./ --port 1235",
    "dev:extension": "tsc -b -w extension",
    "build": "run-p build:* ",
    "build:dash": "parcel build src/dashboard/index.html --dist-dir dashboard --public-url ./ ",
    "build:graphics": "parcel build src/graphics/index.html --dist-dir graphics --public-url ./ ",
    "build:extension": "tsc -b extension"
  },
  "homepage": "https://github.com/devJimmyboy/nodecg-currentsong",
  "authors": [
    "devJimmyboy"
  ],
  "browserslist": "chrome >= 74",
  "nodecg": {
    "compatibleRange": "^1.4.0",
    "description": "Connects to Last.fm's API & animates the currently playing song on change.",
    "dashboardPanels": [
      {
        "name": "current-song",
        "title": "Current Song Setup",
        "width": 3,
        "headerColor": "#2d4e8a",
        "workspace": "Config",
        "file": "index.html"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@toplast/lastfm": "0.1.5",
    "@types/node": "17.0.21",
    "axios": "0.24.0",
    "fitty": "2.3.6",
    "gsap": "3.9.1",
    "jquery": "3.6.0",
    "materialize-css": "1.0.0",
    "normalize.css": "8.0.1"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "parcel": "2.3.2",
    "postcss": "8.4.5",
    "postcss-import": "14.0.2",
    "postcss-nesting": "10.0.2",
    "autoprefixer": "10.4.2",
    "postcss-url": "10.1.3",
    "tailwindcss": "3.0.15"
  }
}
