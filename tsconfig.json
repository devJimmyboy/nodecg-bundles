{
  "compilerOptions": {
    "sourceMap": true,
    "lib": [
      "ESNext"
    ],
    "esModuleInterop": true,
    "module": "ESNext",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "react/next",
      "react-dom/next",
      "nodecg-types/types/browser",
      "mocha",
      "vite/client"
    ],
    "moduleResolution": "node",
    "noEmit": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "types"
  ],
  "exclude": [
    "node_modules",
    "packages/*/extension",
    "packages/*/dashboard",
    "packages/*/graphics"
  ]
}
